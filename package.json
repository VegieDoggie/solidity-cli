    "child_process": "^1.0.2",
    "cli-progress": "^3.12.0",
    "cli-table": "^0.3.11",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.11"
